{
  "networkMode": "awsvpc",
  "cpu": "1024",
  "memory": "2GB",
  "requiresCompatibilities": [
      "FARGATE"
  ], 
  "family": "worker",
  "taskRoleArn": "<%= @WORKER_ROLE_ARN%>",
  "executionRoleArn": "<%= @EXECUTION_ROLE_ARN%>",
  "containerDefinitions": [
    {
      "name": "worker",
      "image": "<%=@WORKER_REGISTRY_URI%>:latest",
      "essential": true,
      "environment": [
          {
              "name": "JOB_QUEUE_URL",
              "value": "<%= @JOB_QUEUE_URL%>"
          },
          {
            "name": "MONGO_URL",
            "value": "<%= @MONGO_URL%>"
          },
          {
            "name": "MONGO_DB_NAME",
            "value": "alfalfa"
          },
          {
            "name": "MONGO_TLS",
            "value": "true"
          },
          {
            "name": "LOGLEVEL",
            "value": "ERROR"
          },
          {
            "name": "S3_URL",
            "value": "https://s3.amazonaws.com"
          },
          { 
            "name": "REDIS_HOST",
            "value": "alfalfa-redis-001.7x80os.0001.use1.cache.amazonaws.com"
          },
          { 
            "name": "NODE_ENV",
            "value": "production"
          },
          { 
            "name": "S3_BUCKET",
            "value": "alfalfa-east"
          },
          { 
            "name": "REGION",
            "value": "us-east-1"
          }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "awslogs-worker",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "alfalfa"
        }
      }
    }
  ]
}

